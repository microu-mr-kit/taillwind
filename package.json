{
  "name": "@mr-kit/tailwind",
  "version": "0.1.3",
  "description": "[mr-kit] Tailwind config utilities",
  "author": "Microu",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "typescript",
    "tailwind"
  ],
  "main": "dist/cjs/mr-kit-tailwind.js",
  "module": "dist/esm/mr-kit-tailwind.js",
  "browser": "dist/browser/mr-kit-tailwind.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "prebuild:types": "rimraf ./build",
    "prebuild:tsc": "rimraf ./build",
    "build:types": "tsc -p ./tsconfig.json --outDir build --declaration true && api-extractor run",
    "build:tsc": "tsc -p ./tsconfig.json --outDir build --declaration true",
    "predocs": "rimraf ./docs",
    "docs": "typedoc src --out docs",
    "clean": "rimraf ./build ./dist ./docs",
    "test": "ts-mocha -n loader=ts-node/esm -p tsconfig.json test/**/*.test.ts"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.19.4",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "eslint": "^8.52.0",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "tailwindcss": "^3.3.3"
  }
}
